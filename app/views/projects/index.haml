.container
  .row
    - @projects.each do |project|
      .col-md-6.text-dark
        =link_to project_path(project) do
          .project
            .thumbnail-header
              .thumbnail-header-btn.exit
              .thumbnail-header-btn.minimalize
              .thumbnail-header-btn.full_screen
            .portfolio-main-image
              -unless project.pictures.blank?
                -unless project.pictures.first.main_image.blank?
                  =image_tag project.pictures.first.main_image
            .card-body
              .title
                %h4
                  =project.title
              .portfolio-short-description
                %p.card-text.font-weight-light
                  =project.description